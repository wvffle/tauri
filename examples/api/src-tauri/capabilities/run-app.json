    "menu:allow-set-checked",
    "menu:allow-set-icon",
    "tray:allow-new",
    "tray:allow-set-icon",
    "tray:allow-set-menu",
    "tray:allow-set-tooltip",
    "tray:allow-set-title",
    "tray:allow-set-visible",
    "tray:allow-set-temp-dir-path",
    "tray:allow-set-icon-as-template",
    "tray:allow-set-show-menu-on-left-click"
